{
  "poc_config": {
    "project_name": "AI-Proposal Engine POC",
    "version": "0.1.0",
    "description": "Proof of concept for generating Civil Engineering Proposals and Technical/Financial Reports",
    "components": {
      "document_processor": {
        "framework": "LlamaIndex",
        "supported_formats": [".pdf", ".docx", ".txt"],
        "chunk_size": 512,
        "chunk_overlap": 50
      },
      "knowledge_base": {
        "storage": "Qdrant",
        "embedding_model": "BAAI/bge-small-en-v1.5",
        "similarity_top_k": 3
      },
      "generation": {
        "template_engine": "python-docx-template",
        "llm_provider": "OpenAI",
        "max_tokens": 2048
      },
      "validation": {
        "enabled": true,
        "checks": [
          "content_length",
          "placeholder_detection",
          "consistency_check"
        ]
      }
    },
    "directories": {
      "input_documents": "./data/input",
      "knowledge_base": "./storage",
      "templates": "./templates",
      "output": "./output"
    },
    "languages": {
      "supported": ["en", "ar"],
      "default": "en"
    }
  }
}